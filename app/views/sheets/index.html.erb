<!DOCTYPE html>
<html lang="ja">
  <head>
    <%= render 'shared/head' %>
    	<%= stylesheet_link_tag 'sheets', media: 'all'%>
    <title>sheets</title>
  </head>
<body>
<h1>Screen</h1>
</br>
<div class="sheets_screens">
  <div class="sheets_screen_1"><div class="sheets_screen_1_title">スクリーン1</div></div>
</div> 
<div class="sheets_chars_parents">
  <div class="side_sheets">
    <div class="alphabet">A</div>
    <div class="alphabet">B</div>
    <div class="alphabet">C</div>
  </div>
  <div class="sheets_char">
    <table>
      <thead>
        <tr>
          <th><div class="number">1</div></th>
          <th><div class="number">2</div></th>
          <th><div class="number">3</div></th>
          <th><div class="number">4</div></th>
          <th><div class="number">5</div></th>
        </tr>
      </thead>
      <tbody>
          <tr>
            <% for n in 1..5 do %>
              <td>
                  <% sheet = @sheets.find(n)%>
                  <%= link_to new_movie_schedule_reservation_path(@movie_id, @schedule_id, sheet_id: sheet.id, date: @date), class: "sheets_index_button_tag" do %>
                    <button type="button" class="box"><div class="box"></div></button>
                  <% end %>
              </td>
            <% end %>
          </tr>
          <tr>
            <% for n in 6..10 do %>
              <td>
                  <% sheet = @sheets.find(n)%>
                  <%= link_to new_movie_schedule_reservation_path(@movie_id, @schedule_id, sheet_id: sheet.id, date: @date), class: "sheets_index_button_tag" do %>
                    <button type="button" class="box"><div class="box"></div></button>
                  <% end %>
                </div>
              </td>
            <% end %>
          </tr>
          <tr>
            <% for n in 11..15 do %>
              <td>
                  <% sheet = @sheets.find(n)%>
                  <%= link_to new_movie_schedule_reservation_path(@movie_id, @schedule_id, sheet_id: sheet.id, date: @date), class: "sheets_index_button_tag" do %>
                    <button type="button" class="box"><div class="box"></div></button>
                  <% end %>
                </div>
              </td>
            <% end %>
          </tr>
      </tbody>
    </table>
  </div>
  <div class="side_sheets">
    <div class="alphabet">A</div>
    <div class="alphabet">B</div>
    <div class="alphabet">C</div>
  </div>
</div>
</body>
</html>