
<%= form_with(model: @reservaiton, url: admin_reservation_path(@reservation), local: true) do |f| %>
  <%# <%= render 'shared/error_messages' %> 
  <%= f.label :name, '予約者氏名' %> <%= f.text_field :name, :value => @reservation.name, class: 'form-control' %></br>
  <%= f.label :email, '予約者Email' %> <%= f.text_field :email, :value => @reservation.email, class: 'form-control' %></br>
  <%= f.label :schedule_id, 'Schedule_id'%> <%= f.collection_select :schedule_id, Schedule.all, :id, :id %>
  <%= f.label :date, '予約時間' %> <%= select_tag :date, options_for_select({"#{@reservation.date.strftime("%m月%e日")}": @reservation.date,"#{Date.today.strftime("%m月%e日")}": Date.today, "#{Date.today.days_since(1).strftime("%m月%e日")}": Date.today.days_since(1), "#{Date.today.days_since(2).strftime("%m月%e日")}": Date.today.days_since(2), "#{Date.today.days_since(3).strftime("%m月%e日")}": Date.today.days_since(3), "#{Date.today.days_since(4).strftime("%m月%e日")}": Date.today.days_since(4), "#{Date.today.days_since(5).strftime("%m月%e日")}": Date.today.days_since(5), "#{Date.today.days_since(6).strftime("%m月%e日")}": Date.today.days_since(6)}), include_blank: false %></br>
  <%= f.label :sheet_id, '座席' %> <%= f.collection_select :sheet_id, Sheet.all, :id, :id %></br></br>
  <%= f.submit "Update", class: "btn btn-primary"  %>
<% end %>
