<% weeks = ["月","火","水","木","金","土","日"]%>
<%#  %>
<div class="header_reservation">
<h1>ご予約ページ</h1>
  <% flash.each do |message_type, message| %>
    <div class="alert alert-<%= message_type %>"><%= message %></div>
  <% end %>
</div>
<div class="row">
<div class="col-md-6 col-md-offset-3">
<%= form_with(model: @reservation, url: reservations_path, local: true) do |f| %>
  <%# <%= render 'shared/error_messages' %> 
  <%= f.label :name, '選択中の映画' %><%= f.hidden_field :name, value: @movie.name %></br>
  <h2><%= @movie.name %></h2>
  <%= f.label :date, '選択中の日時' %> <%= f.hidden_field :date, class: 'form-control' %></br>
  
  <% index = Date.parse(@start_time).strftime("%u").to_i %>
  <h2><%= Date.parse(@date).strftime("%m月 %e日 (#{weeks[index - 1]}) 開始時間: %l") %> <%= Date.parse(@end_time).strftime("終了予定時間: %l:%M") %></h2>
  <%= f.label :is_showing, '上映中か'%> <%= f.select :is_showing, [["上映中", 1], ["公開予定", 0]], selected: 1%>
  <%= f.label :description, '概要' %> <%= f.text_area :description, class: 'form-control' %></br>
  <%= f.label :image_url, '画像URL' %> <%= f.text_field :image_url, class: 'form-control'%></br>
  <%= f.submit "save", class: "btn btn-primary"  %>
<% end %>
</div>
</div>