<% weeks = ["月","火","水","木","金","土","日"]%>
<%#  %>
<div class="header_reservation">
<h1>ご予約ページ</h1>
  <% flash.each do |message_type, message| %>
    <div class="alert alert-<%= message_type %>"><%= message %></div>
  <% end %>
</div>
<div class="row">
<div class="col-md-6 col-md-offset-3">
<%= form_with(model: @reservation, url: reservations_path, local: true) do |f| %>
  <%# <%= render 'shared/error_messages' %> 
  <p>選択中の映画</p>
  <h2><%= @movie.name %></h2>
  <%= f.hidden_field :movie_name, value: @movie.name %></br>
  
  <p>選択中の日時</p> 
  <%= f.text_field :date, value: @date, readonly: true %>
  <%= f.hidden_field :schedule_id, value: @schedule_id %>

  <p>選択中の座席</p>
  <%= f.text_field :sheet_id, value: @sheet_id, readonly: true %>

  <p>氏名</p>
   <%= f.text_field :name %>
  <p>メールアドレス</p>

   <%= f.email_field :email %>
   
  <div class="select_submit">
  <%= f.submit "予約を確定する" %>
<% end %>
</div>
</div>